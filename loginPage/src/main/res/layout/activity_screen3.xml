<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/layout"
    android:background="@drawable/logintemp"
    tools:context=".ActivityScreen3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="536dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="24dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Access"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/usn"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_grid_3x3_24"
                android:drawablePadding="8dp"
                android:hint="USN"
                android:textColorHint="@color/grey"
                android:inputType="none"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />


            <EditText
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_library_books_24"
                android:drawablePadding="8dp"
                android:hint="Branch"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />


            <EditText
                android:id="@+id/role"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_assignment_ind_24"
                android:drawablePadding="8dp"
                android:hint="Role"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <Button
                android:id="@+id/enterbutton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                android:text="Enter"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="*Please Enter The Details Of The Member*"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/note"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:layout_marginBottom="20dp">
    </TextView>
</LinearLayout>